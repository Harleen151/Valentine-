  <script>
    // Smooth floating hearts + roses
    function spawnFloat(){
      const el = document.createElement("div");
      el.className = "float";
      const items = ["‚ù§Ô∏è","üíñ","üíï","üíò","üåπ","üå∑","‚ú®","ü´∂"];
      el.textContent = items[Math.floor(Math.random()*items.length)];
      el.style.left = (Math.random()*100) + "vw";
      el.style.setProperty("--drift", (Math.random()*80 - 40) + "px");
      const dur = 7 + Math.random()*5;
      el.style.animationDuration = dur + "s";
      el.style.fontSize = (16 + Math.random()*18) + "px";
      el.style.opacity = (0.55 + Math.random()*0.35).toFixed(2);
      document.body.appendChild(el);
      setTimeout(()=>el.remove(), dur*1000);
    }
    const floatTimer = setInterval(spawnFloat, 650);
    function burst(n=14){ for(let i=0;i<n;i++) setTimeout(spawnFloat, i*120); }

    // Questions
    const questions = [
      { key:"love", title:"1) ‡®§‡©Ç‡©∞ ‡®Æ‡©à‡®®‡©Ç‡©∞ ‡®™‡®ø‡®Ü‡®∞ ‡®ï‡®∞‡®¶‡®æ ‡®è‡®Ç? ‚ù§Ô∏è", roman:"(Do you love me?)",
        type:"choice", options:["‡®π‡®æ‡®Ç (Haan) üíñ","‡®¨‡®π‡©Å‡®§ (Bohat) üòç","‡®π‡®Æ‡©á‡®∏‡®º‡®æ (Hamesha) ü´∂","Always yours ‚ù§Ô∏è"] },
      { key:"like", title:"2) ‡®§‡©à‡®®‡©Ç‡©∞ ‡®Æ‡©à‡®Ç ‡®ö‡©∞‡®ó‡©Ä ‡®≤‡©±‡®ó‡®¶‡©Ä ‡®Ü‡®Ç? üôÇ", roman:"(U like me?)",
        type:"choice", options:["‡®π‡®æ‡®Ç (Haan) ‚ù§Ô∏è","Always üòÑ","Bilkul üíò","Tainu hi pasand üòå"] },
      { key:"decisions", title:"3) ‡®§‡©à‡®®‡©Ç‡©∞ ‡®Æ‡©á‡®∞‡©á decision ‡®∏‡®π‡©Ä ‡®≤‡©±‡®ó‡®¶‡©á ‡®Ü? ü§ù", roman:"(Tainu mere decision sahi lagde aa?)",
        type:"choice", options:["‡®π‡®æ‡®Ç ‚úÖ","Main support ‡®ï‡®∞‡®¶‡®æ ‚ù§Ô∏è","Trust ü§ç","Always with you ü´∂"] },
      { key:"rolePick", title:"4) ‡®Æ‡©à‡®Ç ‡®§‡©á‡®∞‡©Ä ‡®ú‡®º‡®ø‡©∞‡®¶‡®ó‡©Ä ‡®µ‡®ø‡©±‡®ö ‡®ï‡©Ä ‡®π‡®æ‡®Ç? üòÑ", roman:"(Pick one cute answer)",
        type:"choice", options:["Queen üëë","Best friend ü´∂","Home üè°","Everything üíñ"] },
      { key:"role", title:"5) ‡®Æ‡©á‡®∞‡®æ ‡®§‡©á‡®∞‡©Ä ‡®ú‡®º‡®ø‡©∞‡®¶‡®ó‡©Ä ‚Äò‡®ö ‡®ï‡©Ä role ‡®Ü? ‚úçÔ∏è", roman:"(One line answer)",
        type:"text" }
    ];

    const answers = {};
    let idx = 0;

    const stepTxt = document.getElementById("stepTxt");
    const qEl = document.getElementById("question");
    const rEl = document.getElementById("roman");
    const choiceArea = document.getElementById("choiceArea");
    const textArea = document.getElementById("textArea");
    const textInput = document.getElementById("textInput");
    const saveTextBtn = document.getElementById("saveTextBtn");
    const bar = document.getElementById("bar");
    const hint = document.getElementById("hint");

    const qbox = document.getElementById("qbox");
    const result = document.getElementById("result");
    const summary = document.getElementById("summary");
    const copyBtn = document.getElementById("copyBtn");
    const restartBtn = document.getElementById("restartBtn");
    const moreHeartsBtn = document.getElementById("moreHeartsBtn");
    const copyBox = document.getElementById("copyBox");
    const replyTextEl = document.getElementById("replyText");

    const finalBtn = document.getElementById("finalBtn");
    const final = document.getElementById("final");
    const yes1 = document.getElementById("yes1");
    const yes2 = document.getElementById("yes2");
    const backBtn = document.getElementById("backBtn");

    function render(){
      const total = questions.length + 1; // + final question
      stepTxt.textContent = `‡®∏‡®µ‡®æ‡®≤ ${idx+1} / ${total}`;
      bar.style.width = `${Math.round((idx/(total))*100)}%`;

      const q = questions[idx];
      qEl.textContent = q.title;
      rEl.textContent = q.roman || "";
      copyBox.style.display = "none";

      if(q.type === "text"){
        choiceArea.innerHTML = "";
        choiceArea.style.display = "none";
        textArea.style.display = "block";
        hint.textContent = "Short and sweet üôÇ";
        textInput.value = answers[q.key] || "";
        setTimeout(()=>textInput.focus(), 60);
      } else {
        textArea.style.display = "none";
        choiceArea.style.display = "flex";
        hint.textContent = "Tap an option üôÇ";
        choiceArea.innerHTML = "";
        q.options.forEach(opt=>{
          const b = document.createElement("button");
          b.className = "opt";
          b.textContent = opt;
          b.addEventListener("click", ()=>{
            answers[q.key] = opt;
            burst(10);
            next();
          });
          choiceArea.appendChild(b);
        });
      }
    }

    function next(){
      idx++;
      if(idx >= questions.length){
        finish();
      }else{
        render();
      }
    }

    function finish(){
      bar.style.width = "100%";
      qbox.style.display = "none";
      result.style.display = "block";
      burst(22);

      const lines = [
        `1) Love: ${answers.love || "-"}`,
        `2) Like: ${answers.like || "-"}`,
        `3) Decisions: ${answers.decisions || "-"}`,
        `4) You are: ${answers.rolePick || "-"}`,
        `5) Role line: ${answers.role || "-"}`
      ];
      summary.innerHTML = lines.map(x=>`<li>${x}</li>`).join("");

      const reply =
`Harleen ‚ù§Ô∏è
1) Love ‚Üí ${answers.love || "-"}
2) Like ‚Üí ${answers.like || "-"}
3) Decisions ‚Üí ${answers.decisions || "-"}
4) Tusi mere layi ‚Üí ${answers.rolePick || "-"}
5) Role (line) ‚Üí ${answers.role || "-"}

Monu ‚ù§Ô∏è`;

      replyTextEl.textContent = reply;

      // update step counter to 6/6 in result view
      stepTxt.textContent = `‡®∏‡®µ‡®æ‡®≤ ${questions.length + 1} / ${questions.length + 1}`;
    }

    saveTextBtn.addEventListener("click", ()=>{
      const v = (textInput.value || "").trim();
      answers[questions[idx].key] = v ? v : "(no answer)";
      burst(10);
      next();
    });

    copyBtn.addEventListener("click", async ()=>{
      copyBox.style.display = "block";
      try{
        await navigator.clipboard.writeText(replyTextEl.textContent);
        copyBtn.textContent = "Copied ‚úÖ";
        setTimeout(()=>copyBtn.textContent="Copy reply text", 1200);
      }catch(e){
        // clipboard may be blocked; manual copy still works
      }
    });

    restartBtn.addEventListener("click", ()=>{
      idx = 0;
      for(const k in answers) delete answers[k];
      final.style.display = "none";
      result.style.display = "none";
      qbox.style.display = "block";
      render();
    });

    moreHeartsBtn.addEventListener("click", ()=>burst(30));

    finalBtn.addEventListener("click", ()=>{
      final.style.display = "block";
      burst(18);
      final.scrollIntoView({behavior:"smooth", block:"nearest"});
    });

    function acceptValentine(choice){
      burst(40);
      const msg = `Harleen ‚ù§Ô∏è I choose: ${choice} üòç Happy Valentine‚Äôs!`;
      copyBox.style.display = "block";
      replyTextEl.textContent = replyTextEl.textContent + "\n\n" + msg;
    }

    yes1.addEventListener("click", ()=>acceptValentine("Yes of course üíñ"));
    yes2.addEventListener("click", ()=>acceptValentine("Obviously üòç"));
    backBtn.addEventListener("click", ()=>{
      final.style.display = "none";
      result.scrollIntoView({behavior:"smooth", block:"nearest"});
    });

    render();
  </script>
